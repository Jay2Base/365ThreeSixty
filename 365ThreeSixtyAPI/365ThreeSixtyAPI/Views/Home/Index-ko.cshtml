@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="page-header">
    <h1>employee Service</h1>
</div>

<div class="row">

    <!--create a new user-->
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Create A New Account</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addUser">


                    <div class="form-group" data-bind="with: newUser">
                        <label for="inputName" class="col-sm-2 control-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputName" data-bind="value:accountName" />
                        </div>

                        <label for="inputEmail" class="col-sm-2 control-label">Account Email</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputEmail" data-bind="value:accountEmail" />
                        </div>

                        <label for="inputContact" class="col-sm-2 control-label">Contact</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputContact" data-bind="value:accountContact" />
                        </div>


                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
        <div class="panel-body">
            <ul class="list-unstyled" data-bind="userAccounts">
                <li>
                   Your API Key is: <strong><span data-bind="text: id"></span></strong>
                   
                </li>
            </ul>
        </div>
    </div>



    <!--Upload Spreadsheet-->
